# .env.example - Copy this to .env and fill in your actual values
# Usage: cp .env.example .env

# ============================================================================
# REQUIRED: Google API Key
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
# Required for Gemini embeddings and LLM
GOOGLE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================================================
# MongoDB Configuration
# ============================================================================
# Local MongoDB instance
MONGODB_URI=mongodb://localhost:61213/?directConnection=true&serverSelectionTimeoutMS=2000&appName=mongosh+2.6.0

# Or MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

DB_NAME=book_search_db
COLLECTION_NAME=vectorized_documents
INDEX_NAME=vector_index

# ============================================================================
# OPTIONAL: LangSmith Integration (for tracing and monitoring)
# ============================================================================
# Get your API key from: https://smith.langchain.com/
# LANGCHAIN_API_KEY=lsv2_pt_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx_xxxxxxxx
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=semantic-search-agent

# LANGSMITH_API_KEY=lsv2_pt_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx_xxxxxxxx
# LANGSMITH_TRACING=true

